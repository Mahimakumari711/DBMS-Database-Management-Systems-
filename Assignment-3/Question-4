SELECT ename,sal, CASE WHEN sal>1500 THEN 'GREATER' WHEN sal<1500 THEN 'SMALLER' ELSE 'EQUAL' END AS comp FROM emp;


Output :
ename	sal	comp
SMITH	800.00	SMALLER
ALLEN	1600.00	GREATER
WARD	1250.00	SMALLER
