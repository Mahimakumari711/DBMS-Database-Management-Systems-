SELECT ename || ' joined on the ' || INITCAP(TO_CHAR(hiredate, 'DDSPTH')) || ' of ' || INITCAP(TO_CHAR(hiredate, 'Month')) || ' of the year ' || TO_CHAR(hiredate, 'YYYY') AS details FROM emp ;


